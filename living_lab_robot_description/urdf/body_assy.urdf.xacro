<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <link name="body_assy">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://living_lab_robot_description/meshes/c4_body_assy.dae" scale="1 1 1"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://living_lab_robot_description/meshes/c4_body_assy.dae" scale="1 1 1"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="5.0"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
        </inertial>
    </link>

    <joint name="body_rotate_joint" type="revolute">
        <parent link="base_link"/>
        <child link="body_assy"/>
        <origin xyz="0 0 0.242" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="${-180/180*pi}" upper="${180/180*pi}" velocity="1.0" effort="1000"/>
    </joint>
    <xacro:insert_position_transmission name="body_rotate_joint" />

    <link name="trans_module">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://living_lab_robot_description/meshes/c4_trans_module.dae" scale="1 1 1"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://living_lab_robot_description/meshes/c4_trans_module.dae" scale="1 1 1"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="1.0"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
        </inertial>
    </link>

    <joint name="elevation_joint" type="prismatic">
        <parent link="body_assy"/>
        <child link="trans_module"/>
        <origin xyz="-0.05 0 0.650" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-0.45" upper="0" velocity="0.04" effort="1000"/>
    </joint>
    <xacro:insert_position_transmission name="elevation_joint" />

</robot>