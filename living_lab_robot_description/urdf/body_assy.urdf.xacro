<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <link name="body_assy">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://living_lab_robot_description/meshes/c3_body_assy.dae" scale="1 1 1"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://living_lab_robot_description/meshes/c3_body_assy.dae" scale="1 1 1"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="5.0"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
        </inertial>
    </link>

    <joint name="body_rotate_joint" type="revolute">
        <parent link="base_link"/>
        <child link="body_assy"/>
        <origin xyz="0 0 0.272" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="${-200/180*pi}" upper="${200/180*pi}" velocity="1.0" effort="1000"/>
    </joint>
    <xacro:insert_position_transmission name="body_rotate_joint" />

    <link name="elv_frame_assy">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://living_lab_robot_description/meshes/c3_elv_frame_assy.dae" scale="1 1 1"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://living_lab_robot_description/meshes/c3_elv_frame_assy.dae" scale="1 1 1"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="1.0"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
        </inertial>
    </link>

    <joint name="elv_frame_updown_joint" type="prismatic">
        <parent link="body_assy"/>
        <child link="elv_frame_assy"/>
        <origin xyz="0 0 0.400" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-0.25" upper="0.15" velocity="1.0" effort="1000"/>
    </joint>
    <xacro:insert_position_transmission name="elv_frame_updown_joint" />

</robot>