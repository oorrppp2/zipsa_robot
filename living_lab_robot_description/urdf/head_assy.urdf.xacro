<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <link name="head_assy">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://living_lab_robot_description/meshes/c4_head_assy.dae" scale="1 1 1"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://living_lab_robot_description/meshes/c4_head_assy.dae" scale="1 1 1"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="1.0"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
        </inertial>
    </link>

    <joint name="head_pan_joint" type="revolute">
        <parent link="body_assy"/>
        <child link="head_assy"/>
        <origin xyz="0 0 0.982" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="${-270/180*pi}" upper="${270/180*pi}" velocity="2.0" effort="1000"/>
    </joint>
    <xacro:insert_position_transmission name="head_pan_joint" />

    <link name="head_screen">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://living_lab_robot_description/meshes/head_screen.dae" scale="1 1 1"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://living_lab_robot_description/meshes/head_screen.dae" scale="1 1 1"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="1.0"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
        </inertial>
    </link>

    <joint name="head_screen_tilt_joint" type="revolute">
        <parent link="head_assy"/>
        <child link="head_screen"/>
        <origin xyz="0.101 0 -0.112" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        <limit lower="${-10/180*pi}" upper="${5/180*pi}" velocity="2.0" effort="1000"/>
    </joint>
    <xacro:insert_position_transmission name="head_screen_tilt_joint" />

    <link name="head_tilt_unit">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://living_lab_robot_description/meshes/head_tilt_unit.dae" scale="1 1 1"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://living_lab_robot_description/meshes/head_tilt_unit.dae" scale="1 1 1"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="5.0"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
        </inertial>
    </link>

    <joint name="head_tilt_unit_joint" type="revolute">
        <parent link="head_assy"/>
        <child link="head_tilt_unit"/>
        <origin xyz="0.098 0 -0.016" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        <limit lower="${0/180*pi}" upper="${25/180*pi}" velocity="0.2" effort="1000"/>
    </joint>
    <xacro:insert_position_transmission name="head_tilt_unit_joint" />

    <link name="head_d435_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.025 0.090 0.025"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.025 0.090 0.025"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="1.0"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
        </inertial>
    </link>
    <xacro:insert_rgbd_camera_sensor name="head_d435"/>

    <joint name="head_d435_mount_joint" type="fixed">
        <parent link="head_tilt_unit"/>
        <child link="head_d435_link"/>
        <origin xyz="0.02 0 0.03085" rpy="0 0 0"/>
    </joint>

    <link name="gaze_link">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="1.0"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
        </inertial>
    </link>

    <joint name="gaze_fixed_joint" type="fixed">
        <parent link="head_tilt_unit"/>
        <child link="gaze_link"/>
        <origin xyz="0.032 0 0.03085" rpy="0 0 0"/>
    </joint>

</robot>