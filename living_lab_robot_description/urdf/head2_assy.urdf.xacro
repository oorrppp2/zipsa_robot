<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <link name="head2_assy">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://living_lab_robot_description/meshes/c3_head2_assy.dae" scale="1 1 1"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://living_lab_robot_description/meshes/c3_head2_assy.dae" scale="1 1 1"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="1.0"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
        </inertial>
    </link>

    <joint name="head2_pan_joint" type="revolute">
        <parent link="body_assy"/>
        <child link="head2_assy"/>
        <origin xyz="0 0 0.9383" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="${-90/180*pi}" upper="${90/180*pi}" velocity="1.0" effort="1000"/>
    </joint>
    <xacro:insert_position_transmission name="head2_pan_joint" />

    <link name="head2_d435_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.025 0.090 0.025"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.025 0.090 0.025"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="1.0"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
        </inertial>
    </link>

    <joint name="head2_d435_tilt_joint" type="revolute">
        <parent link="head2_assy"/>
        <child link="head2_d435_link"/>
        <origin xyz="0.126 0 0.07" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        <limit lower="${-10/180*pi}" upper="${40/180*pi}" velocity="1.0" effort="1000"/>
    </joint>
    <xacro:insert_position_transmission name="head2_d435_tilt_joint" />

</robot>